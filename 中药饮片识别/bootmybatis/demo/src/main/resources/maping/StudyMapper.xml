<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.peng.mapper.StudyMapper">
<!--查询图片-->
    <select id="searchphoto" resultType="Photo">
        select *
        from question
        where id = #{uid}
    </select>
<!--查询图片正确名字-->
    <select id="searchname" resultType="Stonename">
        select name
        from  question
        where id=#{uid}
    </select>
<!--查询图片名字随机取3个-->
    <select id="searchother" resultType="Stonename">
        select distinct  name
        from  question
        where name not in (select name
            from  question
            where id=#{uid}) order by rand() limit 3
    </select>
<!--查询积分-->
    <select id="searchscore" resultType="java.lang.Integer">
        select score
        from user
        where tel = #{phone}
    </select>
<!--更新积分-->
    <select id="updatescore" >
        update user
        set score= #{score}
        where tel=#{phone}
    </select>
<!--查询subid-->
    <select id="searchid" resultType="User">
        select id
        from user
        where tel=#{phone}
    </select>
<!--    插入错题-->
    <select id="inserquestion" >
        insert mistake_question(id,name,url)
        value (#{id},#{name},#{src})
    </select>

    <select id="searchview" resultType="Photo">
        select name
        from  question
        where id=#{uid}
    </select>
</mapper>
