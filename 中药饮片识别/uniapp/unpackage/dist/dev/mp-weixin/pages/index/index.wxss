/* 文章场景相关 */
.content1 {
  height: 100%;
}
.content1 swiper {
  width: 750rpx;
  height: 420rpx;
}
.content1 swiper image {
  height: 100%;
  width: 100%;
}
.content1 .screen-swiper {
  min-height: 375rpx;
}
.content1 .nav {
  background-color: #F8F8FF;
  display: flex;
}
.content1 .nav .nav_item {
  width: 50%;
  text-align: center;
}
.content1 .nav .nav_item view {
  width: 80rpx;
  height: 80rpx;
  background: #C8C7CC;
  border-radius: 60rpx;
  margin: 10px auto;
  line-height: 90rpx;
  color: #F1F1F1;
  font-size: 40rpx;
}
.content1 .nav .nav_item text {
  font-size: 30rpx;
}
.content1 .data {
  width: 750rpx;
  margin-top: 40rpx;
  background-color: #F8F8FF;
}
.content1 .data .first {
  color: #C0C0C0;
}
.content1 .data .zhuyao {
  width: 100%;
  height: 100%;
  margin-top: 60rpx;
}
.content1 .data .zhuyao .theme {
  margin: 0 auto;
  text-align: center;
  width: 600rpx;
}
.content1 .data .zhuyao .two {
  font-size: 35rpx;
  font-weight: 550;
}
.content1 .data .zhuyao .picture {
  margin-top: 30rpx;
  width: 750rpx;
  height: 500rpx;
}
.content1 .data .zhuyao .picture image {
  width: 100%;
  height: 100%;
}
/* 搜索框 */
.search-ico,
.search-ico-1 {
  width: 45rpx;
  height: 45rpx;
}
.shadow {
  width: 600rpx;
  height: 60rpx;
  border-radius: 18px;
  box-shadow: 0 0 10px #e6e6e6;
  position: relative;
  left: 60rpx;
}
.input {
  height: 46rpx;
  width: 350rpx;
  padding-left: 70rpx;
  padding-top: 8rpx;
  font-size: 30rpx;
  color: #ccc;
}
.sea {
  position: absolute;
  left: 79%;
  top: 14%;
  height: 46rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 15px;
}
.search-ico-wapper {
  width: 50rpx;
  padding-top: 8rpx;
  float: left;
  height: 60rpx;
  margin-left: 10rpx;
}
.search-box {
  width: 100%;
  height: 100rpx;
  margin: 0px auto;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.search-input {
  display: inline-block;
  width: 65%;
  height: 60rpx;
  border: 1px solid #cccccc;
  float: left;
  font-size: 12px;
  margin-left: 4px;
}
.search-button {
  display: inline-block;
  width: 15%;
  height: 60rpx;
  float: left;
  background-color: #00a0e9;
  font-size: 12px;
  color: #fff;
  text-align: center;
  margin-left: -8rpx;
  font-size: 24rpx;
}
.phone {
  height: 50rpx;
  width: 50rpx;
  float: left;
  margin-left: 20rpx;
  padding-top: 8rpx;
}

