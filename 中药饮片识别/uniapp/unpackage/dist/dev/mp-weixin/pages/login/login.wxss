.load .box {
  height: 100%;
}
.load image {
  position: absolute;
  display: block;
  height: 100%;
  width: 100%;
}
.load .content {
  top: 90rpx;
  position: relative;
  width: 300rpx;
  height: 300rpx;
  overflow: hidden;
  margin: 0 auto;
}
.load .content .image {
  width: 100%;
  height: 100%;
  position: relative;
  border: none;
}
.load .form {
  top: 70rpx;
  position: relative;
  display: flex;
  width: 650rpx;
  height: 200px;
  justify-content: space-between;
  flex-direction: column;
  padding-top: 10px;
  margin: 50rpx;
}
.load .form .input {
  position: relative;
  display: flex;
  border: 1px solid #FFFFFF;
  height: 40px;
  align-items: center;
  border-radius: 20px;
}
.load .form .input .input_place {
  font-size: 15px;
}
.load .turn {
  top: 100rpx;
  position: relative;
  width: 750rpx;
  height: 40px;
}
.load .turn .left {
  position: absolute;
  text-align: center;
  font-size: 12px;
  margin-left: 70rpx;
  border: none;
}
.load .turn .right {
  position: absolute;
  text-align: center;
  font-size: 12px;
  margin-left: 500rpx;
  border: none;
}

